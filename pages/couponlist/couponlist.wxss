scroll-view{padding: 20rpx 0;box-sizing: border-box}
.discount .top_text{display: flex;justify-content: space-between;padding:20rpx 15rpx 20rpx 15rpx;
}
.discount .top_text .text1{font-size: 30rpx;font-weight: bold;color: #404040}
.discount .top_text .text2{font-size: 26rpx;color: #404040}
.discount .top_text .text2 .icon{display: inline-block;background:#ff8339;color: white;height: 26rpx;width: 26rpx;text-align: center; line-height: 26rpx;padding-bottom: 3rpx}
.discount .discount_list{padding:0 15rpx 0rpx 15rpx;}
.discount .discount_list .item{height: 168rpx;background: url('http://192.168.1.100/images/discount_bg_icon_03.png') center 0 no-repeat;background-size: 100%;margin-bottom: 20rpx;position: relative}
.discount .discount_list .item .prise{position: absolute;color: white;top: 32rpx;left:44rpx;}
.discount .discount_list .item .prise .prise_top_text{font-size: 65rpx;font-weight: bold; display: inline-block;vertical-align: bottom;line-height: 1}
.discount .discount_list .item .prise .prise_top_text .fh{font-size: 30rpx;margin-right: -15rpx}
.discount .discount_list .item .prise .prise_bot_text{font-size: 24rpx;text-align: right;padding-right: 5rpx;}
.discount .discount_list .item .describe{position: absolute;top: 0;bottom: 0;display: flex;left:250rpx;right:200rpx;text-align: center;align-items: center;justify-content: center;flex-direction: column;font-size: 34rpx;color: #404040}

.discount .discount_list .item .delete{background: #ff8339;color: #ffffff;font-size: 26rpx;text-align: center;height: 58rpx;line-height: 58rpx;width: 100rpx;border-radius: 5rpx;top: 50%;transform: translateY(-50%);position: absolute;right: 33rpx;}

.dinner-time-wrap {padding: 0 0 0 40rpx;display: flex;justify-content: space-around;border-bottom: 1rpx solid #f6f6f6;}
.dinner-time-wrap .time-list{color: #666666;font-size: 28rpx;padding: 20rpx 20rpx;position: relative;}
.dinner-time-wrap .time-list.active{color: #343434;font-weight: bold;}
.dinner-time-wrap .time-list.active::after{content: '';position: absolute;left: 0;right: 0;height: 6rpx;background:#ff8339;bottom: 0 }

.yesbtn{height: 98rpx;line-height: 98rpx;text-align: center;color: #fefefe;font-size: 30rpx;background: #ff8339}