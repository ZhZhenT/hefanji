/* pages/feedback/feedback.wxss */

.feedback {
  padding: 15rpx 20rpx;
}

textarea {
  border: 2rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx;
  font-size: 26rpx;

}

input {
  border: 2rpx solid #f5f5f5;
  width: 100%;
  box-sizing: border-box;
  padding: 0 15rpx;
  font-size: 26rpx;
  margin-top: 15rpx;
  height: 90rpx;
}

.btn {
  background: #ff8339;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  width: 350rpx;
  border-radius: 50rpx;
  bottom: 150rpx;
  left: 50%;
  margin: 400rpx auto 0;
}

.dinner-time-wrap {
  padding: 0 0 0 40rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #f6f6f6;
}

.dinner-time-wrap .time-list {
  color: #666;
  font-size: 28rpx;
  padding: 20rpx 20rpx;
  position: relative;
}

.dinner-time-wrap .time-list.active {
  color: #343434;
  font-weight: bold;
}

.dinner-time-wrap .time-list.active::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #ff8339;
  bottom: 0;
}

.fk-wrap {
  padding: 15rpx;
}

.fk-wrap .fk-list .item {
  border: 1rpx solid #f5f5f5;
  padding: 25rpx;
  margin-bottom: 20rpx;
}

.fk-wrap .fk-list .item .top-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.fk-wrap .fk-list .item .top-info .left {
  display: flex;
  align-items: center;
}

.fk-wrap .fk-list .item .top-info .left .username {
  color: #343434;
  font-size: 26rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.fk-wrap .fk-list .item .top-info .right {
  color: #a7a7a7;
  font-size: 20rpx;
}

.fk-wrap .fk-list .item .user-say {
  color: #343434;
  font-size: 26rpx;
  margin-top: 25rpx;
}

.fk-wrap .fk-list .item  .fankui {
  color: #ff8f4c;
  font-size: 26rpx;
  background: #f9f4f2;
  margin-top: 35rpx;
  padding: 35rpx 25rpx;
}
